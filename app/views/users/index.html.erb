<h1>Users List</h1>
<br>

<% if user_model_signed_in?%>
<table class="table table-striped table-bordered table-hover">
  <thead bgcolor="#5AA1E3">
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Twitter</th>

      <th class="text-center", colspan="3">CRUD</th>
    </tr>
  </thead>
<tbody>

<div id="users">
  <% @users.each do |user| %>
    <!-- <%= render user %> -->
      <% if user.user_model == current_user_model %>
      <tr>
      <td> <%= link_to user.first_name + ' ' + user.last_name, user %> </td>
      <td> <%= user.email %> </td>
      <td> <%= user.phone_number %> </td>
      <td> <%= user.twitter %> </td>


      <td> <%= link_to "Show", user, class:"btn btn-outline-secondary" %> </td>

      <td> <%= link_to "Edit", edit_user_path(user), class:"btn btn-outline-info" %> </td>
      <td> <%= button_to "Delete", user, method: :delete, class:"btn btn-outline-danger btn-sm" %> </td>
  
    </tr>
    <% end %>
  <% end %>
</div>

</tbody>
</table>

<br>

<%= link_to "New user", new_user_path, class:"btn btn-secondary" %>

<% else %>
<h1>Hellloooo</h1>
This is my first rails page..

<% end %>
