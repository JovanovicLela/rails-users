<div class="jumbotron">
  <h1 class="display-4">
    <%= @user.first_name %>
    <%= @user.last_name %>
  </h1>

  <p class="lead">
    <%= @user.email %>
  </p>
  <br>

<%= render @user %>

<form class="form-inline">
  <div class="form-group", id="show-buttons">
   <%= link_to "Edit", edit_user_path(@user), class:"btn btn-primary" %> 
  </div>
  <div class="form-group", id="show-buttons">
    <%= button_to "Delete", @user, method: :delete, data: {confirm: "Are you sure?" }, class:"btn btn-danger" %>
  </div>
  <br>
  <div class="form-group", id="show-buttons">
    <%= link_to "Back to users", users_path, class:"btn btn-secondary" %>
  </div>

</form>
 

</div>
